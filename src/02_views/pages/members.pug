extends ../partials/layout.pug

block content
  main.members
    h2 Users Record
    .container
      table.users-record
        thead 
          tr
            th.rounded-corner ID
            th Full Name
            th Message Created
            th Membership
            th.rounded-corner Admin
        tbody
          if users
            each user in users
              - const isMember = users.member_status !== "registered"
              - const isAdmin = users.member_status !== "admin"
              tr
                td (
                  class=(user)
                )=user.id
                td=user.fullname
                td=user.username
                td=user.messages_count
                td(
                  class=(isMember ? "yes-td" : "no-td")
                )=(isMember ? "Yes" : "No")
                td(
                  class=(isAdmin ? "yes-td" : "no-td")
                )=(isAdmin ? "Yes" : "No")

